# This config just adds support for React and es6 parsing

extends: ./common.eslintrc

ecmaFeatures:
  jsx: true

env:
  node: false

plugins:
  - react

# Use the babel parser to handle es6 and jsx properly
parser: babel-eslint

# Pairs global variable name, and whether to allow writing to it.
# See:
# http://eslint.org/docs/user-guide/configuring.html#specifying-globals
globals:
  # TODO import lodash npm module instead
  _: false
